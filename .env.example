# Google OAuth for Authentication
GOOGLE_OAUTH_CLIENT_ID=your_client_id_here
GOOGLE_OAUTH_CLIENT_SECRET=your_client_secret_here

# Session Security
SESSION_SECRET=generate_a_secure_random_key

# API Keys
HUBSPOT_API_KEY=your_hubspot_api_key
CHARGEBEE_API_KEY=your_chargebee_api_key
CHARGEBEE_SITE=your_chargebee_site_name
OPENAI_API_KEY=your_openai_api_key
OOTI_API_KEY=your_ooti_api_key

# Slack Integration (optional)
SLACK_BOT_TOKEN=your_slack_bot_token
SLACK_CHANNEL_ID=your_slack_channel_id

# Google API credentials (optional)
# Place credentials.json file in the project root or specify path
GOOGLE_CREDENTIALS_PATH=credentials.json

# Feature Flags
GMAIL_ENABLED=true
GDRIVE_ENABLED=true
CALENDAR_ENABLED=true
PENNYLANE_ENABLED=false
ENABLE_SLACK_NOTIFICATIONS=false 